# El farol problem - Docker Environment Variables
# Copy this file to .env and adjust values as needed

# PostgreSQL Configuration
POSTGRES_USER=elfarol
POSTGRES_PASSWORD=elfarol_secret
POSTGRES_DB=elfarol
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=3000
NODE_ENV=production

# Database URL (constructed from above values, used by Prisma)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://elfarol:elfarol_secret@postgres:5432/elfarol?schema=public

# For local development (outside Docker), use:
# DATABASE_URL=postgresql://elfarol:elfarol_secret@localhost:5432/elfarol?schema=public
